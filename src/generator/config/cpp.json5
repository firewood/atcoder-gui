{
  "base_indent": 4,
  "insert_space_around_operators": false,
  "global_prefix": "",
  "loop": {
    "header": "for(int {loop_var} = 0 ; {loop_var} < {length} ; {loop_var}++){",
    "footer": "}"
  },
  "type": {
    "int": "long long",
    "float": "long double",
    "str": "std::string"
  },
  "default": {
    "int": "0",
    "float": "0.0",
    "str": "\"\""
  },
  "arg": {
    "int": "long long {name}",
    "float": "long double {name}",
    "str": "std::string {name}",
    "seq": "std::vector<{type}> {name}",
    "2d_seq": "std::vector<std::vector<{type}>> {name}"
  },
  "actual_arg": {
    "seq": "std::move({name})",
    "2d_seq": "std::move({name})"
  },
  "access": {
    "seq": "{name}[{index}]",
    "2d_seq": "{name}[{index_i}][{index_j}]"
  },
  "declare": {
    "int": "long long {name};",
    "float": "long double {name};",
    "str": "std::string {name};",
    "seq": "std::vector<{type}> {name};",
    "2d_seq": "std::vector<std::vector<{type}>> {name};"
  },
  "allocate": {
    "seq": "{name}.assign({length}, {default});",
    "2d_seq": "{name}.assign({length_i}, std::vector<{type}>({length_j}));"
  },
  "declare_and_allocate": {
    "seq": "std::vector<{type}> {name};",
    "2d_seq": "std::vector<std::vector<{type}>> {name};"
  },
  "resize": {
    "seq": "{name}.resize({length});",
    "2d_seq": "{name}.resize({length_i}, std::vector<{type}>({length_j}));"
  },
  "input": {
    "int": "std::cin >> {name};",
    "float": "std::cin >> {name};",
    "str": "std::cin >> {name};"
  }
}
